<UserControl x:Class="Excellent.Wpf.Views.TileButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Excellent.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="grid" Height="100" Width="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="Background" Value="Gray"/>
            </Style>
        </Grid.Style>
        <Image Grid.Column="0" Source="pack://application:,,,/Resources/Image/airhorn.png" HorizontalAlignment="Center" Width="50" />
        <TextBlock Grid.Column="1" Text="Airhorn" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Width="50" HorizontalAlignment="Left"></TextBlock>

    </Grid>
</UserControl>
